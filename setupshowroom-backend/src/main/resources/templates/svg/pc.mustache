<?xml version="1.0" encoding="UTF-8"?>
<svg width="{{svgWidth}}" height="200" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="pc-bg" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#020617"/>
      <stop offset="100%" style="stop-color:#0F172A"/>
    </linearGradient>
  </defs>

  <rect width="{{svgWidth}}" height="200" rx="8" fill="url(#pc-bg)"/>

  <g>
    <rect width="110" height="200" rx="8" fill="#020617"/>

    <g transform="translate(25, 30)" font-family="monospace" font-size="10">

      <rect x="0" y="0" width="60" height="120" rx="6" fill="#0F172A" stroke="#60A5FA" stroke-width="1.5"/>

      <circle cx="30" cy="20" r="10" fill="#020617" stroke="#60A5FA" stroke-width="1.5">
        <animateTransform attributeName="transform" attributeType="XML"
                          type="rotate" from="0 30 20" to="360 30 20" dur="2s" repeatCount="indefinite"/>
      </circle>

      <rect x="23" y="35" width="14" height="10" rx="2" fill="#1E293B"/>

      <rect x="10" y="55" width="40" height="6" rx="1" fill="#2563EB"/>
      <rect x="10" y="65" width="40" height="6" rx="1" fill="#2563EB"/>

      <rect x="4" y="40" width="3" height="60">
        <animate attributeName="fill" values="#60A5FA;#818CF8;#60A5FA;#38BDF8" dur="3s" repeatCount="indefinite"/>
      </rect>
      <rect x="53" y="40" width="3" height="60">
        <animate attributeName="fill" values="#38BDF8;#60A5FA;#818CF8;#38BDF8" dur="3s" repeatCount="indefinite"/>
      </rect>

      <rect x="8" y="100" width="44" height="5" fill="#60A5FA" opacity="0.3">
        <animate attributeName="opacity" values="0.3;0.6;0.3" dur="2s" repeatCount="indefinite"/>
      </rect>

      <rect x="27" y="122" width="6" height="8" rx="1" fill="#1E293B"/>

      <text x="5" y="140" font-size="6" fill="#60A5FA">
        SYSTEM READY
        <animate attributeName="opacity" values="1;0;1" dur="1.2s" repeatCount="indefinite"/>
      </text>
    </g>
  </g>

  <g transform="translate(120, 0)">
    <text font-family="'Segoe UI'" font-size="16" font-weight="600" fill="#60A5FA" x="0" y="25">
      {{title}}
    </text>

    <g transform="translate(0, 40)" font-family="'Segoe UI'" font-size="12" fill="#F1F5F9">
      <g>
        {{#cpu}}
        <text x="0" y="15">💻 CPU: <tspan fill="#F1F5F9">{{cpu}}</tspan></text>
        {{/cpu}}
        {{#gpu}}
        <text x="0" y="40">🎮 GPU: <tspan fill="#F1F5F9">{{gpu}}</tspan></text>
        {{/gpu}}
        {{#ram}}
        <text x="0" y="65">💾 RAM: <tspan fill="#F1F5F9">{{ram}}</tspan></text>
        {{/ram}}
        {{#storage}}
        <text x="0" y="90">💽 SSD: <tspan fill="#F1F5F9">{{storage}}</tspan></text>
        {{/storage}}
      </g>

      <g transform="translate(240,0)">
        {{#motherboard}}
        <text x="0" y="15">📟 MB: <tspan fill="#F1F5F9">{{motherboard}}</tspan></text>
        {{/motherboard}}
        {{#psu}}
        <text x="0" y="40">⚡ PSU: <tspan fill="#F1F5F9">{{psu}}</tspan></text>
        {{/psu}}
        {{#setupCase}}
        <text x="0" y="65">🖥️ Case: <tspan fill="#F1F5F9">{{setupCase}}</tspan></text>
        {{/setupCase}}
        {{#monitor}}
        <text x="0" y="90">🖥️ Monitor: <tspan fill="#F1F5F9">{{monitor}}</tspan></text>
        {{/monitor}}
      </g>
    </g>

    {{#hasCategories}}
    <g transform="translate(0, 145)">
      {{#categories}}
      <rect x="{{xOffset}}" y="0" width="{{width}}" height="18" rx="4" fill="#1E293B"/>
      <text font-family="'Segoe UI'" font-size="10" fill="#60A5FA" x="{{xOffset}}" dx="5" dy="13">
        {{name}}
      </text>
      {{/categories}}
    </g>
    {{/hasCategories}}

    <line x1="0" y1="175" x2="{{svgWidth}}" y2="175" stroke="#60A5FA" stroke-width="1"/>

    <text font-family="'Segoe UI'" font-size="10" fill="#60A5FA" y="190" x="0">
      <tspan font-weight="bold">setupshowroom.com</tspan>
    </text>

    <text font-family="'Segoe UI'" font-size="10" fill="#60A5FA" y="190" x="75%" text-anchor="end">
      <tspan font-weight="bold"
             text-decoration-thickness="2px"
             text-decoration-color="#60A5FA"
             text-decoration-style="solid">Setup Owner:
        <tspan text-decoration="underline"
               text-decoration-thickness="2px"
               text-decoration-color="#60A5FA"
               text-decoration-style="solid">
          {{setupOwner}}
        </tspan>
      </tspan>
    </text>
  </g>
</svg>
