<?xml version="1.0" encoding="UTF-8"?>
<svg width="{{svgWidth}}" height="200" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#030712;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#111827;stop-opacity:0.8"/>
    </linearGradient>
  </defs>

  <rect width="{{svgWidth}}" height="200" rx="8" fill="url(#bgGradient)"/>

  <g>
    <rect x="0" y="0" width="110" height="200" fill="#030712" rx="4"/>

    <g transform="translate(10, 20)">
      <g font-family="monospace" font-size="10" fill="#10B981">
        <text x="0" y="30">
          <tspan fill="#F43F5E">def</tspan>
          <tspan fill="#10B981"> main():</tspan>
          <animate attributeName="opacity" values="0;1;1;0" dur="5s" repeatCount="indefinite"/>
        </text>
        <text x="2" y="45">
          <tspan fill="#A5B4FC">while</tspan>
          <tspan fill="#10B981"> True:</tspan>
          <animate attributeName="opacity" values="0;0;1;1;0" dur="5s" repeatCount="indefinite"/>
        </text>
        <text x="4" y="60">
          <tspan fill="#10B981">eat()</tspan>
          <animate attributeName="opacity" values="0;0;0;1;1;0" dur="5s" repeatCount="indefinite"/>
        </text>
        <text x="4" y="75">
          <tspan fill="#10B981">code()</tspan>
          <animate attributeName="opacity" values="0;0;0;0;1;1;0" dur="5s" repeatCount="indefinite"/>
        </text>
        <text x="4" y="90">
          <tspan fill="#10B981">sleep()</tspan>
          <animate attributeName="opacity" values="0;0;0;0;0;1;1;0" dur="5s" repeatCount="indefinite"/>
        </text>

        <rect x="0" y="120" width="4" height="12" fill="#10B981">
          <animate attributeName="opacity" values="1;0;1" dur="1s" repeatCount="indefinite"/>
        </rect>
      </g>
    </g>
  </g>

  <g transform="translate(120, 0)">
    <text x="0" y="20" fill="#10B981" font-family="Arial" font-size="16" font-weight="bold">{{title}}</text>

    <g transform="translate(0, 40)" font-family="'Segoe UI'" font-size="12" fill="#E5E7EB">
      <g>
        {{#cpu}}
        <text x="0" y="15">💻 CPU:
          <tspan fill="#E5E7EB">{{cpu}}</tspan>
        </text>
        {{/cpu}}
        {{#gpu}}
        <text x="0" y="40">🎮 GPU:
          <tspan fill="#E5E7EB">{{gpu}}</tspan>
        </text>
        {{/gpu}}
        {{#ram}}
        <text x="0" y="65">💾 RAM:
          <tspan fill="#E5E7EB">{{ram}}</tspan>
        </text>
        {{/ram}}
        {{#storage}}
        <text x="0" y="90">💽 Storage:
          <tspan fill="#E5E7EB">{{storage}}</tspan>
        </text>
        {{/storage}}
      </g>

      <g transform="translate(240,0)">
        {{#motherboard}}
        <text x="0" y="15">📟 Motherboard:
          <tspan fill="#E5E7EB">{{motherboard}}</tspan>
        </text>
        {{/motherboard}}
        {{#monitor}}
        <text x="0" y="40">🖥️ Monitor:
          <tspan fill="#E5E7EB">{{monitor}}</tspan>
        </text>
        {{/monitor}}
        {{#keyboard}}
        <text x="0" y="65">⌨️ Keyboard:
          <tspan fill="#E5E7EB">{{keyboard}}</tspan>
        </text>
        {{/keyboard}}
        {{#mouse}}
        <text x="0" y="90">🖱️ Mouse:
          <tspan fill="#E5E7EB">{{mouse}}</tspan>
        </text>
        {{/mouse}}
      </g>
    </g>

    {{#hasCategories}}
    <g transform="translate(0, 145)">
      {{#categories}}
      <rect x="{{xOffset}}" y="0" width="{{width}}" height="22" rx="6" fill="#111827"
            stroke="#10B981" stroke-width="1" stroke-opacity="0.3"/>
      <text font-family="'SF Pro Display', 'Segoe UI', system-ui" font-size="10"
            font-weight="500" fill="#10B981" x="{{xOffset}}" dx="3" dy="15"
            letter-spacing="0.3px">
        {{name}}
      </text>
      {{/categories}}
    </g>
    {{/hasCategories}}

    <line x1="0" y1="175" x2="{{svgWidth}}" y2="175" stroke="#10B981" stroke-width="1"/>

    <text font-family="'Segoe UI'" font-size="10" fill="#10B981" y="190" x="0">
      <tspan font-weight="bold">setupshowroom.com</tspan>
    </text>

    <text font-family="'Segoe UI'" font-size="10" fill="#10B981" y="190" x="75%" text-anchor="end">
      <tspan font-weight="bold"
             text-decoration-thickness="2px"
             text-decoration-color="#10B981"
             text-decoration-style="solid">Setup Owner:
        <tspan text-decoration="underline"
               text-decoration-thickness="2px"
               text-decoration-color="#10B981"
               text-decoration-style="solid">
          {{setupOwner}}
        </tspan>
      </tspan>
    </text>
  </g>
</svg>
