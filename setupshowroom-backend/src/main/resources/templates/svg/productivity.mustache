<?xml version="1.0" encoding="UTF-8"?>
<svg width="{{svgWidth}}" height="200" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="productivity-bg" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#0C4A6E"/>
      <stop offset="100%" style="stop-color:#0369A1"/>
    </linearGradient>
  </defs>

  <rect width="{{svgWidth}}" height="200" rx="8" fill="url(#productivity-bg)"/>

  <g>
    <rect x="0" y="0" width="110" height="200" fill="#0C4A6E" rx="4"/>

    <g transform="translate(10, 20)">
      <g font-family="monospace" font-size="10" fill="#0EA5E9">

        <rect x="10" y="20" width="70" height="60" rx="3" fill="#164E63">
          <animate attributeName="opacity" values="0;1" dur="1s" begin="0s"/>
        </rect>

        <rect x="15" y="25" width="60" height="8" rx="2" fill="#0EA5E9" opacity="0.7">
          <animate attributeName="width" values="0;60" dur="1.5s" begin="0.5s"/>
        </rect>

        <rect x="15" y="38" width="45" height="8" rx="2" fill="#0EA5E9" opacity="0.5">
          <animate attributeName="width" values="0;45" dur="1.5s" begin="1s"/>
        </rect>

        <path d="M15,55 l8,8 l15,-15" stroke="#2DD4BF" stroke-width="2" fill="none">
          <animate attributeName="stroke-dasharray" values="0,50;50,0" dur="1s" begin="2s"/>
        </path>

        <rect x="15" y="70" width="60" height="4" rx="2" fill="#164E63"/>
        <rect x="15" y="70" width="0" height="4" rx="2" fill="#2DD4BF">
          <animate attributeName="width" values="0;45" dur="3s" begin="0.5s"/>
        </rect>

        <g transform="translate(15, 90)">
          <rect width="15" height="15" rx="2" fill="#0EA5E9" opacity="0.8">
            <animate attributeName="height" values="15;10;15" dur="2s" repeatCount="indefinite"/>
          </rect>
          <rect x="20" width="15" height="15" rx="2" fill="#0EA5E9" opacity="0.6">
            <animate attributeName="height" values="15;5;15" dur="2s" begin="0.3s" repeatCount="indefinite"/>
          </rect>
          <rect x="40" width="15" height="15" rx="2" fill="#0EA5E9" opacity="0.8">
            <animate attributeName="height" values="15;12;15" dur="2s" begin="0.6s" repeatCount="indefinite"/>
          </rect>
        </g>

        <text x="5" y="125" font-size="7" fill="#7DD3FC" font-family="'SF Pro Display', 'Segoe UI', system-ui"
              font-weight="500" letter-spacing="0.3px">
          Maximize Efficiency
        </text>
      </g>
    </g>
  </g>

  <g transform="translate(120, 0)">
    <text font-family="'SF Pro Display', 'Segoe UI'" font-size="16" font-weight="600" fill="#0EA5E9" x="0" y="25">
      {{title}}
    </text>

    <g transform="translate(0, 40)" font-family="'SF Pro Display', 'Segoe UI'" font-size="12" fill="#F0F9FF">
      <g>
        {{#cpu}}
        <text x="0" y="15">💻 CPU:
          <tspan fill="#7DD3FC">{{cpu}}</tspan>
        </text>
        {{/cpu}}
        {{#gpu}}
        <text x="0" y="40">🎮 GPU:
          <tspan fill="#7DD3FC">{{gpu}}</tspan>
        </text>
        {{/gpu}}
        {{#ram}}
        <text x="0" y="65">💾 RAM:
          <tspan fill="#7DD3FC">{{ram}}</tspan>
        </text>
        {{/ram}}
        {{#storage}}
        <text x="0" y="90">💽 SSD:
          <tspan fill="#7DD3FC">{{storage}}</tspan>
        </text>
        {{/storage}}
      </g>

      <g transform="translate(240,0)">
        {{#motherboard}}
        <text x="0" y="15">📟 MB:
          <tspan fill="#7DD3FC">{{motherboard}}</tspan>
        </text>
        {{/motherboard}}
        {{#psu}}
        <text x="0" y="40">⚡ PSU:
          <tspan fill="#7DD3FC">{{psu}}</tspan>
        </text>
        {{/psu}}
        {{#setupCase}}
        <text x="0" y="65">🖥️ Case:
          <tspan fill="#7DD3FC">{{setupCase}}</tspan>
        </text>
        {{/setupCase}}
        {{#monitor}}
        <text x="0" y="90">🖥️ Monitor:
          <tspan fill="#7DD3FC">{{monitor}}</tspan>
        </text>
        {{/monitor}}
      </g>
    </g>

    {{#hasCategories}}
    <g transform="translate(0, 145)">
      {{#categories}}
      <rect x="{{xOffset}}" y="0" width="{{width}}" height="22" rx="6" fill="#164E63"
            stroke="#0EA5E9" stroke-width="1" stroke-opacity="0.3"/>
      <text font-family="'SF Pro Display', 'Segoe UI', system-ui" font-size="10"
            font-weight="500" fill="#7DD3FC" x="{{xOffset}}" dx="3" dy="15"
            letter-spacing="0.3px">
        {{name}}
      </text>
      {{/categories}}
    </g>
    {{/hasCategories}}

    <line x1="0" y1="175" x2="{{svgWidth}}" y2="175" stroke="#0EA5E9" stroke-width="1"/>

    <text font-family="'SF Pro Display', 'Segoe UI'" font-size="10" fill="#7DD3FC" y="190" x="0">
      <tspan font-weight="bold">setupshowroom.com</tspan>
    </text>

    <text font-family="'SF Pro Display', 'Segoe UI'" font-size="10" fill="#7DD3FC" y="190" x="75%" text-anchor="end">
      <tspan font-weight="bold"
             text-decoration-thickness="2px"
             text-decoration-color="#7DD3FC"
             text-decoration-style="solid">Setup Owner:
        <tspan text-decoration="underline"
               text-decoration-thickness="2px"
               text-decoration-color="#7DD3FC"
               text-decoration-style="solid">
          {{setupOwner}}
        </tspan>
      </tspan>
    </text>
  </g>
</svg>
